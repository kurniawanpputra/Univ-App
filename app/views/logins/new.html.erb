<h1 align="center" class="title">Login</h1>

<br/>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= form_for(:logins, html: {class: "form-horizontal"}) do |f| %>
  
        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :email %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :email, class: "form-control", placeholder: "Input email..." %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :password %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control", placeholder: "Input password..." %>
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-6">
            <%= f.submit "Log In", class: "btn btn-primary btn-sm" %>
          </div>
        </div>
  
      <% end %>
    </div>
  </div>
</div>
