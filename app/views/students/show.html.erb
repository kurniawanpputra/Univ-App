<h1 align="center" class="title">Student Profile</h1>

<br/>

<div class="row" align="center">
  <div class="col-md-offset-3 col-md-6">
    <div class="list-group">
      <p class="list-group-item active">
        <b>Name: <%= @student.name %></b>
      </p>
      <p class="list-group-item">Email: <%= @student.email %></p>
      <p class="list-group-item">Date Registered: <%= @student.created_at.to_date %></p>
      <p class="list-group-item">Course Enrollments: 
        <% if @student.courses.empty? %>
            N/A
        <% else %>
          <% @student.courses.each_with_index do |course, index| %>
            <b><%= index+1 %>.</b> <%= course.name %>
          <% end %>
        <% end %>
      </p>
      <p class="list-group-item">
        <%= link_to 'Go Back', students_path, class: "btn btn-success btn-sm" %>
      </p>
    </div>
  </div>
</div>
