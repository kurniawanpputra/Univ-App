<%= render "shared/errors", obj: @student %>

<h1 align="center" class="title"><%= @student.new_record? ? "Register": "Edit Profile" %></h1>

<br/>

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= form_for(@student, html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :name %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :name, class: "form-control", placeholder: "Input name..." %>
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :email %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :email, class: "form-control", placeholder: "Input email..." %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :password %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class: "form-control", placeholder: "Input password..." %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-3 control-label">
            <%= f.label :password_confirmation, "Password Confirmation" %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password..." %>
          </div>
        </div>
  
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-6">
            <%= f.submit(@student.new_record? ? "Sign Up": "Update", class: "btn btn-primary btn-sm") %>
          </div>
        </div>
  
      <% end %>
    </div>
  </div>
</div>
