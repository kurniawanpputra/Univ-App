<h1 align="center" class="title">Courses</h1>

<br/>

<div class="row" align="center">
  <% @courses.each do |course| %>
    <div class="col-md-4">
      <div class="list-group">
        <p class="list-group-item active">
          <b>Code: <%= course.short_name %></b>
        </p>
        <p class="list-group-item"><b>Course Name:</b> <%= course.name %></p>
        <p class="list-group-item"><b>Description:</b> <%= course.description %></p>
        <p class="list-group-item">
          <a href="#" class="btn btn-primary btn-sm">Enroll</a>
          <a href="#" class="btn btn-success btn-sm">View Info</a>
        </p>
      </div>
    </div>
  <% end %>
</div>
