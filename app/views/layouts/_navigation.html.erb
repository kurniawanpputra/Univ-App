<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <p class="navbar-brand" href="/" id="logo">TECH UNIVERSITY</p>
        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
          </ul>
          
          <ul class="nav navbar-nav navbar-right">
            <% if (logged_in?) %>
              <li><a href="/courses/enrollments">Enrollments</a></li>
              <li><a href="/students">Students</a></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= session_link %></li>
                <% if (!logged_in?) %>
                  <li><a href="/students/new">Register</a></li>
                <% else %>
                  <li><%= link_to 'Edit Profile', edit_student_path(session[:student_id]) %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </div>
  </nav>
  
  <div class="container">
    <% flash.each do |key, msg| %>
      <div class="container">
        <div class="row" align="center">
          <div class="well col-sm-12" id="fade-target">
            <% if(flash[:error]) %>
              <span class="text-danger">
                <%= msg %><br/>
              </span>
            <% else %>
              <span class="text-success">
                <%= msg %><br/>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</header>
